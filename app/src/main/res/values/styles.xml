<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.YahtzeeScore" parent="Theme.Material3.DayNight">
    </style>

    <style name="Theme.YahtzeeScore" parent="Base.Theme.YahtzeeScore">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
